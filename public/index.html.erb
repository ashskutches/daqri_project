<!DOCTYPE html>
<html>
  <head>
    <title>To Do List</title>
    <style type="text/css" media="screen">
      html, body {
        background-color: #4B7399;
        font-family: Verdana, Helvetica, Arial;
        font-size: 14px;
      }
      a { color: #0000FF; }

      #container {
        width: 90%;
        margin: 0 auto;
        background-color: #FFF;
        padding: 20px 40px;
        margin-top: 20px;
        min-height: 600px;
      }
      #footer {
        width: 100%;
        margin: 0 auto;
        background-color: #FFF;
        padding: 20px 40px;
      }
    </style>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript" charset="utf-8">
      $(function() {
        function addContact(contact) {
          $('#contacts').append('<li>' + contact.name + '</ul>');
        }

        $('#new_contact').submit(function(e) {
          $.post('/contacts', $(this).serialize(), addContact);
          this.reset();
          e.preventDefault();
        });

        $.getJSON('/contacts', function(contacts) {
          $.each(contacts, function() { addContact(this); });
        });
      });
    </script>
  <body>
    <div id="container">
      <div class="row">
        <div class="span9"> 
          <h1>Contacts</h1>
          <ul id="contacts"></ul>
        </div>
        <div class="span2">
          <button id="add-more" class="btn btn-primary">Add Contact</button>
        </div>
      </div>
    </div>
    <div id="footer">
      Footer
      <form id="new-contact">
        <input type="text" name="contact[name]" id="contact_name">
        <input type="text" name="number[name]" id="contact_number">
        <input type="submit" value="Add">
      </form>
    </div>
  </body>
</html>
